<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/InitialDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <fragment
                    android:id="@+id/initialDice"
                    android:name="com.patrickmumot.eatingdice.Fragment.newDiceFragment"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/initialDice"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="50dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:text="Figure out what you're eating... the easy way! Just shake 'n' Eat!"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/goButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_margin="40dp"
                    android:background="@drawable/initial_layout_bg"
                    android:text="Go!"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/MainDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/mainToolbar"
                        style="@style/HeaderBar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@android:color/white"
                        android:elevation="4dp"
                        android:minHeight="?attr/actionBarSize"
                        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


                        <TextView
                            android:id="@+id/justShakeTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Just Shake"
                            android:textColor="@color/black"
                            android:textSize="24sp" />


                    </android.support.v7.widget.Toolbar>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/status_bg">

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No cuisine selected yet"
                            android:textColor="@android:color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </android.support.constraint.ConstraintLayout>

                    <RelativeLayout
                        android:id="@+id/foundLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/mainToolbar"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/restaurantTitleLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:layout_above="@+id/detailsLayout"
                            android:layout_alignParentStart="true"
                            android:layout_weight="1"
                            android:visibility="visible">

                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/emptyContraint"
                                android:layout_width="0dp"
                                android:layout_height="0dp"

                                android:layout_alignParentStart="true"
                                android:background="@android:color/white"
                                android:visibility="visible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/diceLayout">

                                <ProgressBar
                                    android:id="@+id/emptyProgressBar"
                                    style="?android:attr/progressBarStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/initialTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/initial_layout_bg"
                                    android:padding="10dp"
                                    android:paddingEnd="25dp"
                                    android:paddingStart="25dp"
                                    android:text="Shake or tap the dice!"
                                    android:textAlignment="center"
                                    android:textColor="@android:color/white"
                                    android:textSize="24sp"
                                    android:visibility="invisible"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </android.support.constraint.ConstraintLayout>

                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/diceLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@android:color/white">

                                <Button
                                    android:id="@+id/nextButton"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/dice_arrow_right"
                                    android:visibility="invisible"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/diceFragment"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <Button
                                    android:id="@+id/backButton"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/dice_arrow_left"
                                    android:visibility="invisible"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/diceFragment"
                                    app:layout_constraintHorizontal_bias="0.47"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <android.support.constraint.Guideline
                                    android:id="@+id/guideline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    app:layout_constraintGuide_percent="0.5" />

                                <fragment
                                    android:id="@+id/diceFragment"
                                    android:name="com.patrickmumot.eatingdice.Fragment.newDiceFragment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="10dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </android.support.constraint.ConstraintLayout>

                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/restaurantConstraint"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:background="@android:color/white"
                                android:visibility="invisible"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/diceLayout">

                                <android.support.v4.view.ViewPager
                                    android:id="@+id/imageViewPager"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:visibility="visible">

                                </android.support.v4.view.ViewPager>

                                <com.patrickmumot.eatingdice.Elements.SwipeImageView
                                    android:id="@+id/restaurantImage"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:scaleType="fitXY"
                                    android:src="@android:drawable/btn_star"
                                    android:visibility="invisible"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <FrameLayout
                                    android:id="@+id/topGradient"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"

                                    android:foreground="@drawable/gradient_bg"
                                    app:layout_constraintBottom_toBottomOf="@+id/topGradient2"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </FrameLayout>

                                <FrameLayout
                                    android:id="@+id/topGradient2"
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"

                                    android:layout_marginBottom="8dp"

                                    android:foreground="@drawable/gradient_bg"
                                    app:layout_constraintBottom_toTopOf="@+id/guideline8"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                </FrameLayout>

                                <ToggleButton
                                    android:id="@+id/acceptButton"
                                    android:layout_width="65dp"
                                    android:layout_height="65dp"
                                    android:layout_marginRight="22dp"
                                    android:background="@drawable/accept_button"
                                    app:layout_constraintBottom_toTopOf="@+id/webButton"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <ToggleButton
                                    android:id="@+id/hideImageView"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="24dp"
                                    android:background="@drawable/hide_button"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/topGradient2" />

                                <TextView
                                    android:id="@+id/locationName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_marginBottom="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="24dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="Name"
                                    android:textColor="@android:color/black"
                                    android:textSize="32sp"
                                    app:layout_constraintBottom_toTopOf="@+id/guideline8"
                                    app:layout_constraintEnd_toStartOf="@+id/acceptButton"
                                    app:layout_constraintStart_toEndOf="@+id/hideImageView"
                                    app:layout_constraintTop_toTopOf="@+id/topGradient"
                                    app:layout_constraintVertical_bias="0.0" />

                                <Button
                                    android:id="@+id/webButton"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="4dp"

                                    android:layout_marginTop="2dp"
                                    android:background="@drawable/web_button"
                                    android:elevation="0dp"
                                    android:visibility="visible"
                                    app:layout_constraintEnd_toStartOf="@+id/phoneButton"
                                    app:layout_constraintTop_toBottomOf="@+id/locationName" />

                                <Button
                                    android:id="@+id/phoneButton"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/phone_button"
                                    android:elevation="0dp"
                                    android:textColor="#fff"
                                    android:visibility="visible"
                                    app:layout_constraintEnd_toEndOf="@+id/imageViewPager"
                                    app:layout_constraintTop_toBottomOf="@+id/locationName" />

                                <ImageView
                                    android:id="@+id/leftArrow"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/guideline8"
                                    app:srcCompat="@drawable/left_arrow" />

                                <ImageView
                                    android:id="@+id/rightArrow"
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"

                                    android:layout_marginBottom="8dp"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/guideline8"
                                    app:srcCompat="@drawable/right_arrow" />

                                <RatingBar
                                    android:id="@+id/mainRatingBar"
                                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="4dp"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:progressTint="@color/switchTrack"
                                    android:rating="3"
                                    android:stepSize="0.01"
                                    android:theme="@style/RatingBar"
                                    app:layout_constraintStart_toStartOf="@+id/topGradient"
                                    app:layout_constraintTop_toBottomOf="@+id/locationName" />


                                <com.daasuu.bl.BubbleLayout
                                    android:id="@+id/saveBubble"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:elevation="10dp"
                                    android:padding="8dp"
                                    android:visibility="invisible"
                                    app:bl_arrowDirection="top_center"
                                    app:bl_arrowHeight="10dp"
                                    app:bl_arrowPosition="70dp"
                                    app:bl_arrowWidth="12dp"
                                    app:bl_bubbleColor="#4CB5F5"
                                    app:bl_cornersRadius="25dp"
                                    app:bl_strokeColor="#4CB5F5"
                                    app:bl_strokeWidth="1dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/acceptButton">

                                    <TextView
                                        android:id="@+id/saveTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="4dp"
                                        android:text="Save place!"
                                        android:textColor="@android:color/white"
                                        android:textSize="18sp" />

                                </com.daasuu.bl.BubbleLayout>

                                <android.support.constraint.Guideline
                                    android:id="@+id/guideline8"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintGuide_percent="0.45" />

                                <ImageView
                                    android:id="@+id/deliveryRestaurant"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="36dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@drawable/distance_layout_bg"
                                    android:padding="8dp"
                                    app:layout_constraintEnd_toStartOf="@+id/webButton"
                                    app:layout_constraintTop_toBottomOf="@+id/locationName"
                                    app:srcCompat="@drawable/truck_icon" />


                                <LinearLayout
                                    android:id="@+id/priceLevelLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginStart="32dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/distance_layout_bg"
                                    android:orientation="horizontal"
                                    android:padding="3dp"
                                    app:layout_constraintBottom_toBottomOf="@+id/restaurantImage"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/mainRatingBar"
                                    app:layout_constraintVertical_bias="1.0">

                                    <TextView
                                        android:id="@+id/priceLevelTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@id/distance"
                                        android:text="$$$"
                                        android:textColor="@android:color/holo_green_dark"
                                        android:textSize="24sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/closingLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/distance_layout_bg"
                                    android:orientation="horizontal"
                                    android:padding="3dp"
                                    app:layout_constraintBottom_toBottomOf="@+id/restaurantImage"
                                    app:layout_constraintEnd_toStartOf="@+id/rightArrow"
                                    app:layout_constraintTop_toBottomOf="@+id/webButton"
                                    app:layout_constraintVertical_bias="1.0">

                                    <TextView
                                        android:id="@+id/closingTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@id/distance"
                                        android:text="8:00 pm"
                                        android:textColor="@android:color/white"
                                        android:textSize="20sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/distanceLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginTop="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/distance_layout_bg"
                                    android:orientation="horizontal"
                                    android:padding="3dp"
                                    app:layout_constraintEnd_toStartOf="@+id/webButton"
                                    app:layout_constraintStart_toEndOf="@+id/mainRatingBar"
                                    app:layout_constraintTop_toBottomOf="@+id/locationName">

                                    <TextView
                                        android:id="@+id/distance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="3.3"
                                        android:textColor="@android:color/white"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@id/distance"
                                        android:text="km"
                                        android:textColor="@android:color/white"
                                        android:textSize="18sp" />
                                </LinearLayout>

                            </android.support.constraint.ConstraintLayout>

                            <com.daasuu.bl.BubbleLayout
                                android:id="@+id/diceBubble"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:visibility="invisible"
                                app:bl_arrowDirection="top_center"
                                app:bl_arrowHeight="10dp"
                                app:bl_arrowPosition="70dp"
                                app:bl_arrowWidth="12dp"
                                app:bl_bubbleColor="#4CB5F5"
                                app:bl_cornersRadius="25dp"
                                app:bl_strokeColor="#4CB5F5"
                                app:bl_strokeWidth="1dp"
                                app:layout_constraintBottom_toBottomOf="@id/diceLayout"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent">

                                <TextView
                                    android:id="@+id/diceTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="4dp"
                                    android:text="Tap or Shake for new place!"
                                    android:textColor="@android:color/white"
                                    android:textSize="18sp" />

                            </com.daasuu.bl.BubbleLayout>

                            <android.support.constraint.Guideline
                                android:id="@+id/guideline9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintGuide_begin="20dp" />

                            <android.support.constraint.Guideline
                                android:id="@+id/guideline7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:layout_constraintGuide_percent="0.55" />


                        </android.support.constraint.ConstraintLayout>


                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/detailsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_above="@id/showDetailsLayout"
                            android:layout_weight="1"
                            android:visibility="visible">

                            <ScrollView
                                android:id="@+id/displayReviews"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                app:layout_constraintLeft_toLeftOf="parent">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/emptyReviews"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginTop="50dp"
                                        android:text="No reviews for this location."
                                        android:visibility="gone" />

                                    <LinearLayout
                                        android:id="@+id/fullReviewLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_margin="0dp"
                                        android:orientation="vertical">


                                    </LinearLayout>

                                </RelativeLayout>

                            </ScrollView>

                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/mapFrame"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/switchThumbBgActive"
                                app:layout_constraintRight_toRightOf="parent">

                                <fragment
                                    android:id="@+id/mapFragment"
                                    android:name="com.google.android.gms.maps.MapFragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <Button
                                    android:id="@+id/directionsButton"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="25dp"
                                    android:background="@drawable/directions_button"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />
                            </android.support.constraint.ConstraintLayout>


                        </android.support.constraint.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/showDetailsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="1"
                            android:baselineAligned="true"
                            android:orientation="horizontal"
                            android:visibility="invisible">

                            <com.patrickmumot.eatingdice.Elements.SwipeRelativeLayout
                                android:id="@+id/reviewLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/reviewsActive"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="invisible"
                                    app:srcCompat="@drawable/active_tab" />

                                <TextView
                                    android:id="@+id/reviewsTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:text="REVIEWS"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <ImageView
                                    android:id="@+id/reviewArrowDown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_below="@id/reviewsTextView"
                                    android:layout_centerHorizontal="true"
                                    app:srcCompat="@drawable/arrow_down" />
                            </com.patrickmumot.eatingdice.Elements.SwipeRelativeLayout>

                            <com.patrickmumot.eatingdice.Elements.SwipeRelativeLayout
                                android:id="@+id/mapLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/mapActive"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="invisible"
                                    app:srcCompat="@drawable/active_tab" />

                                <TextView
                                    android:id="@+id/mapTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:text="MAP"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />

                                <ImageView
                                    android:id="@+id/mapArrowDown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"
                                    android:layout_below="@id/mapTextView"
                                    android:layout_centerHorizontal="true"
                                    app:srcCompat="@drawable/arrow_down" />
                            </com.patrickmumot.eatingdice.Elements.SwipeRelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <com.daasuu.bl.BubbleLayout
                    android:id="@+id/categoriesBubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="7dp"
                    android:padding="8dp"
                    android:visibility="invisible"
                    app:bl_arrowDirection="right"
                    app:bl_arrowHeight="10dp"
                    app:bl_arrowWidth="12dp"
                    app:bl_bubbleColor="#4CB5F5"
                    app:bl_cornersRadius="25dp"
                    app:bl_strokeColor="#4CB5F5"
                    app:bl_strokeWidth="1dp">

                    <TextView
                        android:id="@+id/categoriesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:text="Select a cuisine!"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                </com.daasuu.bl.BubbleLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/ImageDisplay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/common_google_signin_btn_text_light_pressed"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/fullPageViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/rightArrowFull"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    app:srcCompat="@drawable/right_arrow" />

                <ImageView
                    android:id="@+id/leftArrowFull"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    app:srcCompat="@drawable/left_arrow" />

            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>
    </FrameLayout>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/main_menu" />

</android.support.v4.widget.DrawerLayout>
