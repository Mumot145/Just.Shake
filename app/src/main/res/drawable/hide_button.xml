<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <!--<item>
                <shape android:shape="oval">
                    <solid android:color="#32CD32"/>
                </shape>
            </item>-->
            <item android:left="25dp" android:right="25dp" android:gravity="center">
                <bitmap android:src="@drawable/hide"></bitmap>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape  android:shape="oval">
                    <solid android:color="@color/switchTrack"/>
                </shape>
            </item>
            <item android:left="25dp" android:right="25dp" android:gravity="center">
                <bitmap android:src="@drawable/hide"></bitmap>
            </item>
        </layer-list>

    </item>
</selector>